{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "lib": ["ES2018", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", "spec"],
  "ts-node": {
    "files": true
  }
}
